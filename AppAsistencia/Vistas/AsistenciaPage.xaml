<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppAsistencia.Vistas.AsistenciaPage"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Title="AsistenciaPage"
             BackgroundColor="#bc08fc">
    <ContentPage.Content>
        <Grid VerticalOptions="CenterAndExpand">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Frame Grid.Row="0"
               CornerRadius="10"
               Margin="25"
               BackgroundColor="#bc08fc">
                <StackLayout VerticalOptions="Center"
                         HorizontalOptions="Center">
                    <Label Text="Pulse el lector de huella"
                       TextColor="White"
                       VerticalOptions="CenterAndExpand" 
                       HorizontalOptions="CenterAndExpand"
                       FontAttributes="Bold"
                       FontSize="25"
                       HorizontalTextAlignment="Center"/>
                    <!--<Image Source="huella"
                       Aspect="AspectFit"
                       HorizontalOptions="Center"
                       x:Name="imgAsistencia">
                        <Image.Behaviors>
                            <toolkit:TouchBehavior LongPressCommand="{Binding LongPressCommand}" LongPressDuration="3000"/>
                        </Image.Behaviors>
                    </Image>-->

                    <ImageButton Source="huella"
                                 Aspect="AspectFit"
                                 HeightRequest="200"
                                 HorizontalOptions="Center"
                                 x:Name="imgAsistencia"
                                 Pressed="imgAsistencia_Pressed"
                                 Released="imgAsistencia_Released">
                        <ImageButton.Behaviors>
                            <toolkit:TouchBehavior LongPressCommand="{Binding LongPressCommand}" LongPressDuration="3000"/>
                        </ImageButton.Behaviors>
                    </ImageButton>
                    <Button Text="Marcar Asistencia BiomÃ©trica"
                        TextColor="Black"
                        x:Name="btnMarcarAsistencia"       
                        Margin="15"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="CenterAndExpand"
                        BackgroundColor="White"
                        />
                </StackLayout>
            </Frame>
        </Grid>
    </ContentPage.Content>
</ContentPage>